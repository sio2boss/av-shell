#! /bin/bash


# Import color
source $AV_CONFIG_DIR/default_imports
source $AV_CONFIG_DIR/findjar

# Check for a help flag
avCheckHelpFlags "$1" "av-kafka" "List kafka topics and select one to use" "\n \
    Usage: $0 [topic].\n \
\n"

# Import system path
avAppendSystemPath

#### Put system commands here

kafka_root=$AV_ROOT/../support/$(getpv kafka-version)/bin

if [[ ! -z $1 ]]; then
    setpv kafka-topic "$1"
    exit 0
fi

setpv kafka-topic ""
avCheckVerbose "./kafka-topics.sh --list --zookeeper $(getpv kafka-zookeepers)"
topics=$(cd ${kafka_root} && ./kafka-topics.sh --list --zookeeper $(getpv kafka-zookeepers) | awk '{ print "\""$0"\""}' | tr '\n' ' ')
if [[ -z ${topics} ]]; then
    echo "No topics found"
    exit 1
fi

inquirer_menu kafka-topic ${topics} None

#### End commands
