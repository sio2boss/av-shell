#! /bin/bash


# Import color
source $AV_CONFIG_DIR/default_imports
source $AV_CONFIG_DIR/findjar

# Check for a help flag
avCheckHelpFlags "$1" "builtin" "template script" "\n \
    Template to help you out.\n \
\n"

# Import system path
avAppendSystemPath

#### Put system commands here

if [[ $1 == "" ]]; then
	echo "Usage: kafka-createtopic <topic name>"
	exit
fi

kafka_root=$AV_ROOT/../support/$(getpv kafka-version)/bin

echo "Kafka Command: ./kafka-topics.sh --create --zookeeper $(getpv kafka-zookeepers) --partitions $(getpv kafka-partitions) --replication-factor $(getpv kafka-replication) --topic $*"
cd ${kafka_root} && ./kafka-topics.sh --create --zookeeper $(getpv kafka-zookeepers) --partitions $(getpv kafka-partitions) --replication-factor $(getpv kafka-replication) --topic $*

if [[ $? -eq 0 ]]; then
	echo "Setting active topic to: $1"
	setpv kafka-topic $1
fi

exit $?

#### End commands
