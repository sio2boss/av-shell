#! /bin/bash

# Import color
source $AV_CONFIG_DIR/default_imports

# Check for a help flag
avCheckHelpFlags "$1" "av-shell" "Show underlying commands" "\n \
    Turn on showing underling commands before they are executed.\n \
	Usage: verbose [on|off]\n \
\n"

#### Put system commands here

if [[ "$1" == "check" ]]; then
	echo -e "verbose is set to: $(getpv verbose)"
	exit
fi

if [[ "$1" == "on" ]]; then
	setpv "verbose" "true"
	exit
fi

if [[ "$1" == "off" ]]; then
	setpv "verbose" "false"
	exit
fi

CHOICE=$(gum confirm "Verbose Mode?" --affirmative="On" --negative="Off")
if [[ $? -eq 0 ]]; then
	setpv "verbose" "true"
else
	setpv "verbose" "false"
fi

exit 1

#### End commands
