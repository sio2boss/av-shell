#! /bin/bash


# Import color
source $AV_CONFIG_DIR/default_imports
source $AV_CONFIG_DIR/findjar

# Check for a help flag
avCheckHelpFlags "$1" "builtin" "template script" "\n \
    Template to help you out.\n \
\n"

# Import system path
avAppendSystemPath

#### Put system commands here
folder=$(getpv cluster)
if [[ -z $folder ]]; then
	echo "Unable to find cluster..."
	exit 1
fi

cd $AV_ROOT/../clusters/$folder/ansible && ansible-playbook -i ../inventory/inventory.hosts $1.yaml

#### End commands
