#! /bin/bash


# Import color
source $AV_CONFIG_DIR/default_imports
source $AV_CONFIG_DIR/findjar

# Check for a help flag
avCheckHelpFlags "$1" "builtin" "Run ansible on selected cluster" "\n \
    Runs ansible on all selected cluster using inventory.hosts file.\n \
\n"

# Import system path
avAppendSystemPath

#### Put system commands here

# Get context
context=`context`
if [[ $? -ne 0 ]]; then
	echo "Unable to determine context, please use 'switch' command to set."
	exit 1
fi

cd $context/ansible && ansible-playbook -i $context/inventory/inventory.hosts $1.yaml

#### End commands
