#! /bin/bash


# Import color
source $AV_CONFIG_DIR/default_imports
source $AV_CONFIG_DIR/findjar

# Check for a help flag
avCheckHelpFlags "$1" "builtin" "template script" "\n \
    Template to help you out.\n \
\n"


#### Put system commands here
folder=`getpv clusterdir`
cluster=$(getpv cluster)
if [[ -z $cluster ]]; then
	echo "Unable to find cluster..."
	exit 1
fi
environment=`getpv environment`

# Import system path
avRestoreSystemPath
cd $AV_ROOT/../$folder/$cluster/$environment/terraform && terraform $*

#### End commands
