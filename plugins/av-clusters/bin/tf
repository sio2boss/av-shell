#! /bin/bash


# Import color
source $AV_CONFIG_DIR/default_imports
source $AV_CONFIG_DIR/findjar

# Check for a help flag
avCheckHelpFlags "$1" "builtin" "template script" "\n \
    Template to help you out.\n \
\n"


#### Put system commands here
# Get context
context=`context`
if [[ $? -ne 0 ]]; then
	echo "Unable to determine context, please use 'switch' command to set."
	exit 1
fi

# Import system path
avRestoreSystemPath
cd $context/terraform && terraform $*

#### End commands
