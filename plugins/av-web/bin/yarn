#! /bin/bash

# Import color
source $AV_CONFIG_DIR/default_imports

# Check for a help flag
avCheckHelpFlags "$1" "av-web" "Run yarn" "\n \
\n"

# Import system path
avAppendSystemPath

#### Put system commands here
folders=`cd $AV_ROOT/.. && find -L . -name package.json | grep -v node_modules | grep -v support | grep -v venv | sed -e 's/\/package.json//g' -e 's/^.\///g'`
count=`echo -e ${folders} | wc -l`

if [[ ${count} == 1 ]]; then
	echo -e "Running yarn $* in ${folders}"
	avRestoreSystemPath
	cd $AV_ROOT/../${folders} && yarn $*
else
	setpv folder ""
	inquirer_menu folder ${folders}
	sleep 1
	folder=`getpv folder`
	if [[ ! -z ${folder} ]]; then
		echo -e "Running yarn $* in ${folder}"
		avRestoreSystemPath
		cd $AV_ROOT/../${folder} && yarn $*
	fi
fi

#### End commands
