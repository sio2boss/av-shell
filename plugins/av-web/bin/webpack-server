#! /bin/bash

# Import color
source $AV_CONFIG_DIR/default_imports

# Check for a help flag
avCheckHelpFlags "$1" "av-web" "Run webpack dev server" "\n \
\n"

# Import system path
avAppendSystemPath

#### Put system commands here
webpack_folders=`cd $AV_ROOT/.. && find . -name webpack.config.js | grep -v node_modules | sed -e 's/\/webpack.config.js//g' -e 's/^.\///g'`
count=`echo -e ${webpack_folders} | wc -l`

if [[ ${count} -eq 1 ]]; then
	echo -e "Running webpack-dev-server --progress --color in ${webpack_folders}"
	avRestoreSystemPath
	cd $AV_ROOT/../${webpack_folders} && ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --progress --color $*
else
	setpv folder ""
	inquirer_menu webdir ${webpack_folders}
	sleep 1
	webdir=`getpv webdir`
	if [[ ! -z ${webdir} ]]; then
		echo -e "Running webpack-dev-server --progress --color in ${webdir}"
		avRestoreSystemPath
		cd $AV_ROOT/../${webdir} && DEVELOPMENT=LOCAL_DEV ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --progress --color $*
	fi
fi

#### End commands
