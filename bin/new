#!/bin/bash

# Import color
source $DSS_ROOT/config/color

# Check for a help flag
if [ "$1" == "-h" ]; then

	#### Put your documentation here, a single line is best

	echo "create a new command based on argument"

	#### End help line

	exit
fi

if [ "$#" -eq 0 ]; then
	echo "Need at least one argument, the name of the script to create."
	exit
fi

source $DSS_ROOT/config/color
export PATH=$PATH:$OLD_SYSTEM_PATH

filename=$DSS_ROOT/bin/$1

if [ -e $filename ]; then
	echo "File already exists, updating permissions only"
	chmod +x $filename
	exit
fi

cp $DSS_ROOT/config/template $filename
chmod +x $filename
sublime $filename



