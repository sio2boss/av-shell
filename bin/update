#! /bin/bash


# Import color
source $AV_CONFIG_DIR/default_imports

# Check for a help flag
avCheckHelpFlags "$1" "builtin" "Checks your domain specific shell's version and imposes the changes necessary" "\n \
    Checks your domain specific shell's version and imposes the changes necessary \n
\n"

avRestoreSystemPath

#### Put system commands here

GIT_STATUS=`git diff-index --quiet HEAD`
if [[ "$GIT_STATUS" != 0 ]]; then
    echo -e "Git reports that your project is not in a clean state.  Please get to a clean state and try again."
    exit
fi

git rm -f $AV_ROOT/config/vars/plugins_enabled
git rm -f $AV_ROOT/config/default_imports
git rm -f $AV_ROOT/config/passthrough_template
git rm -f $AV_ROOT/config/template
git rm -f $AV_ROOT/config/welcome
git rm -f $AV_ROOT/config/version
git rm -f $AV_ROOT/config/color
git rm -f $AV_ROOT/config/findjar
git rm -f $AV_ROOT/bin/inquirer_menu
git rm -f $AV_ROOT/bin/edit
git rm -f $AV_ROOT/bin/getpv
git rm -f $AV_ROOT/bin/setpv
git rm -f $AV_ROOT/bin/help
git rm -f $AV_ROOT/bin/new
git rm -f $AV_ROOT/bin/plugin
git rm -f $AV_ROOT/bin/rename
git rm -f $AV_ROOT/bin/rm
git rm -f $AV_ROOT/bin/setprompt
mkdir -p  $AV_ROOT/config/vars

echo
echo "You will need to commit these changes"
echo

#### End commands