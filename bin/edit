#!/bin/bash

# Import color
source $DSS_ROOT/config/color

# Check for a help flag
if [[ "$1" == "-h" || "$1" == "--help" ]]; then

	## Put your documentation here, a single line is best

	echo "[builtin] opens sublime to edit the commands folder"

	## End help line

	exit
fi


# Import system path
export PATH=$PATH:$OLD_SYSTEM_PATH


#### Put system commands here
if [ -z "$EDITOR" ]; then

	echo "set your EDITOR to something you like, I'm picking vi"
	echo
	echo "    something like: export EDITOR=sublime"
	echo
	echo -n "1..."
	sleep 1
	echo -n "2..."
	sleep 1
	echo -n "3..."
	sleep 1
	echo

	vi $DSS_ROOT/bin/$1

else

	$EDITOR $DSS_ROOT/bin/$1

fi

#### End commands
