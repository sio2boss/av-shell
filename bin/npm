#! /bin/bash

# Import color
source $AV_CONFIG_DIR/default_imports

# Check for a help flag
avCheckHelpFlags "$1" "builtin" "Run npm" "\n \
\n"

# Import system path
avAppendSystemPath

#### Put system commands here
folders=`cd $AV_ROOT/.. && find . -name package.json | grep -v node_modules | sed -e 's/\/package.json//g' -e 's/^.\///g'`
count=`echo -en ${folders} | wc -l`

if [[ ${count} -eq 1 ]]; then
	echo -e "Running npm $* in ${folders}"
	avRestoreSystemPath
	cd $AV_ROOT/../${folders} && npm $*
else
	setpv folder ""
	inquirer_menu folder ${folders}
	sleep 1
	folder=`getpv folder`
	if [[ ! -z ${folder} ]]; then
		echo -e "Running npm $* in ${folder}"
		avRestoreSystemPath
		cd $AV_ROOT/../${folder} && npm $*
	fi
fi

#### End commands
