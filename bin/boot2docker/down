#! /bin/bash


# Import color
source $AV_CONFIG_DIR/default_imports

# Check for a help flag
avCheckHelpFlags "$1" "boot2docker" "Shutdown the boot2docker virtual machine" "\n \
Basically runs boot2docker down\n \
\n"

# Import system path
avRestoreSystemPath

#### Put system commands here

boot2docker down

#### End commands
